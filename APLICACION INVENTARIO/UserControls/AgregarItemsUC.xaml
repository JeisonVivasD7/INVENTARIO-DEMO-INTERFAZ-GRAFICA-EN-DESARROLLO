<UserControl x:Class="APLICACION_INVENTARIO.UserControls.AgregarItemsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APLICACION_INVENTARIO.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">



    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/UserControls/fondo-papel-tapiz-colores-vividos-borrosos_58702-3767.avif"/>
        </Grid.Background>
        <Button x:Name="BotonAceptar"
            Content="Aceptar"
            Width="112" Height="23"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,176,23"
            Background="#FF00AE24"
            Foreground="White"/>

        <Button x:Name="BotonCancelar"
            Content="Cancelar"
            Width="113" Height="23"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,34,23"
            Background="#FF9E0000"
            Foreground="White"/>
        <Label Content="Nombre del producto:" HorizontalAlignment="Left" Margin="25,24,0,0" VerticalAlignment="Top" Height="32" Width="543" BorderBrush="Black" Foreground="Black" FontFamily="Arial Narrow" FontSize="20"/>
        <TextBox x:Name="nombreProducto" HorizontalAlignment="Left" Height="34" Margin="32,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="401" TextChanged="NombreProducto"/>
        <Label Content="ID producto:" HorizontalAlignment="Left" Margin="25,139,0,0" VerticalAlignment="Top" Height="32" Width="493" BorderBrush="Black" Foreground="Black" FontFamily="Arial Narrow" FontSize="20"/>
        <TextBox x:Name="ID" HorizontalAlignment="Left" Height="34" Margin="32,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" TextChanged="ID_producto"/>
    </Grid>


</UserControl>
